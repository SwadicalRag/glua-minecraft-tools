{
	"compilerOptions": {
		"module": "commonjs",
		"target": "es5",
		"noEmitOnError": true,
		"outDir": "dist",
		"alwaysStrict": true,
		"allowSyntheticDefaultImports": true,
		"experimentalDecorators": true,
		"noImplicitAny": false,
		"noImplicitReturns": true,
		"noImplicitThis": true,
		"strictNullChecks": true,
		"pretty": true,
		"lib": [ "es2017" ],
		"types": [ "node" ]
	},
	"exclude": [
		"node_modules"
	],
	"include": [
		"./node_modules/@types/**/*.d.ts",
		"./**/*.ts"
	]
}

